@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Employee</h2>
<form method="post" >
    <input asp-for="Id" class="form-control" hidden value="@ViewBag.Employee.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Employee</h2>
        </div>
        <div asp-validation-summary="All">
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            
        </div>
        <div class="mb-3">
            <label asp-for="JobTitle"></label>
            <input asp-for="JobTitle" class="form-control" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to Employee List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name ="_ValidationScriptsPartial"/>
    }
}